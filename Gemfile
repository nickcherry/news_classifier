source 'https://rubygems.org'

ruby File.read(File.expand_path('../.ruby-version', __FILE__)).chomp

# require modern Bundler version
# code via http://stackoverflow.com/a/18384158/1154301
if Gem::Version.new(Bundler::VERSION) < Gem::Version.new('1.10')
  abort "Bundler version >= 1.10 is required; please run 'gem install bundler' to update"
end

gem 'classifier-reborn', '~> 2.1.0'
gem 'colorize', '~> 0.8.1'
gem 'mongoid', '~> 6.1.0'
gem 'pry'
gem 'spidr', '~> 0.6.0'
